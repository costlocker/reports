#!/bin/sh

phpqa=`which phpqa`
if [ "$phpqa" = "" ]
then
    echo "phpqa must be installed globally"
    echo "> https://github.com/EdgedesignCZ/phpqa#without-composer"
    exit 1
fi

phpqa --report --verbose \
    --tools phpcs:1,phpmd:5,phpcpd:0,phpmetrics,phploc,pdepend \
    --buildDir var/QA \
    --analyzedDir ./ \
    --ignoredDirs vendor
