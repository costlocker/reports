#!/bin/sh

if [ ! -f qa/phpqa ];
then
    echo "phpqa must be installed in 'qa' directory"
    echo "> Create symlink to global phpqa '(cd qa && ln -s $(which phpqa) phpqa)'"
    echo "> Or install it in subdirectory '(git clone https://github.com/EdgedesignCZ/phpqa.git ./qa  && cd qa && composer install --no-dev)'"
    exit 1
fi

qa/phpqa --report --verbose \
    --tools phpcs:1,phpmd:5,phpcpd:0,phpmetrics,phploc,pdepend \
    --buildDir var/QA \
    --analyzedDir ./ \
    --ignoredDirs vendor
