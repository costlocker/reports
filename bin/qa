#!/bin/sh

if [ ! -f qa/phpqa ];
then
    echo "installing phpqa globally"
    (git clone https://github.com/EdgedesignCZ/phpqa.git ./qa  && cd qa && composer install --no-dev)
fi

qa/phpqa --report --verbose \
    --tools phpcs:1,phpmd:5,phpcpd:0,phpmetrics,phploc,pdepend \
    --buildDir var/QA \
    --analyzedDir ./ \
    --ignoredDirs vendor
